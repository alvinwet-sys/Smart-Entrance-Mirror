{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DecisionReady",
  "type": "object",
  "required": ["ts", "trace_id", "source", "reply_text"],
  "properties": {
    "ts": {"type": "number"},
    "trace_id": {"type": "string"},
    "source": {"type": "string", "enum": ["llm"], "default": "llm"},
    "reply_text": {"type": "string", "minLength": 1, "maxLength": 512},
    "actions": {
      "type": "array",
      "items": {"type": "string"},
      "default": []
    },
    "priority": {
      "type": "integer",
      "minimum": 0,
      "maximum": 10,
      "default": 7
    }
  },
  "additionalProperties": false
}